  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/PokemonChess;component/Styles/Buttons.xaml" />
        <ResourceDictionary Source="/PokemonChess;component/Styles/Styles.xaml" />
        <ResourceDictionary Source="/PokemonChess;component/Styles/ChessPieceImage.xaml" />
        <ResourceDictionary>
          <Style x:Key="PieceBorders" TargetType="Border">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="AllowDrop" Value="False" />
            <Style.Triggers>
              <DataTrigger Binding="{Binding IsSelected}" Value="True">
                <Setter Property="BorderBrush" Value="DarkRed" />
              </DataTrigger>
              <DataTrigger Binding="{Binding IsSelected}" Value="False">
                <Setter Property="BorderBrush" Value="Transparent"/>
              </DataTrigger>
              <DataTrigger Binding="{Binding IsMovableSpace}" Value="True">
                <Setter Property="AllowDrop" Value="True" />
                <Setter Property="cal:Message.Attach" Value="[Event Drop] = [Action MovePiece($dataContext)]" />
                <Setter Property="Background" Value="#BFE843"/>
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Opacity" Value=".7" />
              </DataTrigger>
            </Style.Triggers>
          </Style>
          <Style x:Key="PieceBaseStyle" TargetType="Ellipse">
            <Setter Property="Margin" Value="1" />
            <Style.Triggers>
              <DataTrigger Binding="{Binding Side}" Value="0">
                <Setter Property="Fill" Value="Transparent" />
              </DataTrigger>
              <DataTrigger Binding="{Binding Side}" Value="1">
                <Setter Property="Fill" Value="White" />
                <Setter Property="Stroke" Value="Black" />
                <Setter Property="StrokeThickness" Value=".1" />
              </DataTrigger>
              <DataTrigger Binding="{Binding Side}" Value="2">
                <Setter Property="Fill" Value="Black" />
                <Setter Property="Stroke" Value="White" />
                <Setter Property="StrokeThickness" Value=".1" />
              </DataTrigger>
            </Style.Triggers>
          </Style>
        </ResourceDictionary>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>
